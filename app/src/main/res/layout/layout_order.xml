<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="97dp"
        app:cardCornerRadius="3dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/OrderedImage"
                android:layout_width="97dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/food" />

            <TextView
                android:id="@+id/OrderedFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="120dp"
                android:text="FoodN"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/OrderedQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="37dp"
                android:textSize="14dp" />

            <Button
                android:id="@+id/OrderConfirm"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:background="@drawable/order_btn_background"
                android:text="Confirm"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="63dp"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/OrderWaiterConfirm"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:background="@drawable/green_background"
                android:text="Confirm"
                android:gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="63dp"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <ImageButton
                android:id="@+id/OrderRemove"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="360dp"
                android:background="#f2f2f2"
                android:src="@drawable/cross" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>